library IEEE;
use IEEE.Std_logic_1164.all;
use IEEE.Numeric_Std.all;

entity tb_Memory is
end;

architecture bench of tb_Memory is

  component Memory
      Port ( clk : in STD_LOGIC;
             reset : in STD_LOGIC;
             detect : in STD_LOGIC;
             data_s : in STD_LOGIC_VECTOR(3 downto 0);
             code_sig : out STD_LOGIC_VECTOR(15 downto 0));
  end component;

  signal clk: STD_LOGIC;
  signal reset: STD_LOGIC;
  signal detect: STD_LOGIC;
  signal data_s: STD_LOGIC_VECTOR(3 downto 0);
  signal code_sig: STD_LOGIC_VECTOR(15 downto 0);

  constant clock_period: time := 10 ns;
  signal stop_the_clock: boolean;

begin

  uut: Memory port map ( clk      => clk,
                         reset    => reset,
                         detect   => detect,
                         data_s   => data_s,
                         code_sig => code_sig );

  stimulus: process
  begin
  
    -- Put initialisation code here

    reset <= '1';
    wait for 5 ns;
    reset <= '0';
    wait for 5 ns;

    -- Put test bench stimulus code here

    stop_the_clock <= true;
    wait;
  end process;

  clocking: process
  begin
    while not stop_the_clock loop
      clk <= '0', '1' after clock_period / 2;
      wait for clock_period;
    end loop;
    wait;
  end process;

end;
